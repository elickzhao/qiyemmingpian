/* 隐藏显示头部样式  */

.header-scrolled {
  position: fixed;
  width: 100%;
  top: 0;
  height: 2rem;
  text-align: center;
  background: #fff;
  box-shadow: 2px 4px 7px #dcdcdc;
  z-index: 1000;
  opacity: 1;
  -webkit-transition: all 0.5s;
  -moz-transition: all 0.5s;
  transition: all 0.5s;
}

.header {
  position: fixed;
  width: 100%;
  top: 0;
  height: 2rem;
  background: #fff;
  box-shadow: 2px 4px 7px #dcdcdc;
  z-index: 1000;
  opacity: 0;
  -webkit-transition: all 0.5s;
  -moz-transition: all 0.5s;
  transition: all 0.5s;
}

/* 下拉头部样式  */

.zan-toptips-my {
  display: block;
  position: fixed;
  -webkit-transform: translateZ(0) translateY(-100%);
  width: 100%;
  min-height: 32px;
  top: 0;
  line-height: 2.3;
  font-size: 14px;
  text-align: center;
  color: #fff;
  background-color: #FF8FB5;
  z-index: 110;
  transition: all 0.4s ease;
  opacity: 0.9;
}

.zan-toptips--show-my {
  -webkit-transform: translateZ(0) translateY(0);
}

/* 字体加粗  */

.font-bold {
  font-weight: 700;
}

.zan-font-26 {
  font-size: 45rpx;
}

/* 标题距离  */

.doc-title {
  letter-spacing: 2rpx;
  line-height: 65rpx;
}

/* 虚线  */

.hackhome-4 {
  border-bottom: 1px dashed #c9c9c9;
  height: 220rpx;
  width: 100%;
}

/* logo样式 */

.logo {
  margin-top: 15px;
  width: 50px;
  height: 50px;
  background-color: #eee;
}

/* 详细信息面板  */

.panel {
  background: #fff;
  margin-top: 50rpx;
  overflow: hidden;
}

/* 详细信息列表  */

.cell {
  position: relative;
  padding: 12rpx 0;
  padding-right: 15rpx;
  display: flex;
  align-items: center;
  line-height: 1.4;
  font-size: 14px;
  margin-bottom: 20rpx;
}

